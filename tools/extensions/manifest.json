{
  "name": "ReLink Extensions",
  "description": "The ReLink browser helper tool",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": ["activeTab", "contextMenus", "clipboardWrite", "scripting"]
}
